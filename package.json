{
  "name": "loading-progress-bar",
  "version": "1.0.2",
  "description": "The universal, framework-agnostic loading progress bar component",
  "author": "Denis Sumbaev @sumbad",
  "license": "MIT",
  "main": "index.js",
  "module": "index.es.js",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sumbad/loading-progress-bar.git"
  },
  "bugs": {
    "url": "https://github.com/sumbad/loading-progress-bar/issues"
  },
  "homepage": "https://github.com/sumbad/loading-progress-bar#readme",
  "scripts": {
    "build": "rm -rf ./lib && rollup -c && node ./scripts/.make-lib",
    "watch": "rollup -c -w",
    "dev": "concurrently \"npm:start\" \"npm:watch\"",
    "start": "browser-sync 'www' -w --port 8082 --no-open",
    "prepublishOnly": "npm run build",
    "release": "npm publish ./lib",
    "release:beta": "npm publish ./lib --tag beta",
    "test": "npm run build && jest",
    "test:watch": "concurrently \"npm run test -- --watch\" \"npm:watch\"",
    "test:report": "nyc report --reporter=html --reporter=lcov --reporter=text-summary",
    "test:coverage": "npm run test && npm run test:report"
  },
  "keywords": [
    "web component",
    "progress",
    "bar"
  ],
  "dependencies": {
    "@web-companions/fc": "0.1.0-test-tng.3"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@insum/ts.config": "^1.0.1",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-replace": "^2.3.4",
    "@types/expect-puppeteer": "^4.4.4",
    "@types/jest": "^26.0.15",
    "@types/jest-environment-puppeteer": "^4.4.0",
    "@types/node": "^14.14.5",
    "@types/puppeteer": "^3.0.2",
    "babel-plugin-transform-jsx-to-tt": "^0.2.0",
    "browser-sync": "^2.26.13",
    "concurrently": "^5.3.0",
    "fs-extra": "^9.0.1",
    "jest": "^26.6.1",
    "jest-puppeteer": "^4.4.0",
    "nyc": "^15.1.0",
    "postcss-import": "^12.0.1",
    "puppeteer": "^5.4.0",
    "puppeteer-to-istanbul": "^1.4.0",
    "rollup": "^2.32.1",
    "rollup-plugin-analyzer": "^3.3.0",
    "rollup-plugin-minify-html-literals": "^1.2.5",
    "rollup-plugin-minify-tagged-css-template": "0.0.2",
    "rollup-plugin-postcss": "^3.1.8",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.27.3",
    "sass": "^1.27.0",
    "tslib": "^2.0.3",
    "typescript": "^4.0.5",
    "uhtml": "^2.1.2"
  }
}
